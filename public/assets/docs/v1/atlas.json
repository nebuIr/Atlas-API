{
  "openapi": "3.0.0",
  "info": {
    "title": "Atlas API",
    "description": "This is a simple API for No Man's Sky news & releases",
    "contact": {
      "email": "support@nebulr.me"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.2.0"
  },
  "servers": [
    {
      "url": "https://api.atlasapp.info/v1",
      "description": "Atlas API"
    }
  ],
  "tags": [
    {
      "name": "news",
      "description": "All No Man's Sky news posts",
      "externalDocs": {
        "description": "Source",
        "url": "https://www.nomanssky.com/news/"
      }
    },
    {
      "name": "releases",
      "description": "All No Man's Sky release posts",
      "externalDocs": {
        "description": "Source",
        "url": "https://www.nomanssky.com/release-log/"
      }
    },
    {
      "name": "version",
      "description": "Latest No Man's Sky version",
      "externalDocs": {
        "description": "Source",
        "url": "https://nomanssky.gamepedia.com/"
      }
    }
  ],
  "paths": {
    "/news": {
      "get": {
        "tags": [
          "news"
        ],
        "summary": "Returns all No Man's Sky news",
        "operationId": "news",
        "parameters": [
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer"
            },
            "description": "Limit results returned, defaults to all entries returned"
          },
          {
            "in": "query",
            "name": "offset",
            "schema": {
              "type": "integer"
            },
            "description": "Offset or skip results from the beginning of the query"
          },
          {
            "in": "query",
            "name": "order",
            "schema": {
              "type": "string",
              "enum": [
                "desc",
                "asc"
              ]
            },
            "description": "Change result ordering by setting values of asc or desc"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/News"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/news/{id}": {
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "schema": {
            "type": "integer"
          },
          "required": true,
          "description": "The No Man's Sky news ID"
        }
      ],
      "get": {
        "tags": [
          "news"
        ],
        "summary": "Returns the No Man's Sky news with specified id",
        "operationId": "news_id",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/News"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/news/latest": {
      "get": {
        "tags": [
          "news"
        ],
        "summary": "Returns latest No Man's Sky news",
        "operationId": "news_latest",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/News"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/releases": {
      "get": {
        "tags": [
          "releases"
        ],
        "summary": "Returns all No Man's Sky releases",
        "operationId": "releases",
        "parameters": [
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer"
            },
            "description": "Limit results returned, defaults to all entries returned"
          },
          {
            "in": "query",
            "name": "offset",
            "schema": {
              "type": "integer"
            },
            "description": "Offset or skip results from the beginning of the query"
          },
          {
            "in": "query",
            "name": "order",
            "schema": {
              "type": "string",
              "enum": [
                "desc",
                "asc"
              ]
            },
            "description": "Change result ordering by setting values of asc or desc"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Release"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/releases/{id}": {
      "parameters": [
        {
          "in": "path",
          "name": "id",
          "schema": {
            "type": "integer"
          },
          "required": true,
          "description": "The No Man's Sky release ID"
        }
      ],
      "get": {
        "tags": [
          "releases"
        ],
        "summary": "Returns the No Man's Sky release with specified id",
        "operationId": "release_id",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/News"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/releases/latest": {
      "get": {
        "tags": [
          "releases"
        ],
        "summary": "Returns latest No Man's Sky release",
        "operationId": "release_latest",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Release"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/version": {
      "get": {
        "tags": [
          "version"
        ],
        "summary": "Returns latest game version",
        "operationId": "version",
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Version"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "News": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 117
          },
          "url": {
            "type": "string",
            "format": "url",
            "example": "https://example.com/"
          },
          "title": {
            "type": "string",
            "example": "title"
          },
          "timestamp": {
            "type": "integer",
            "example": 1573833735
          },
          "images": {
            "$ref": "#/components/schemas/Images"
          },
          "excerpt": {
            "type": "string",
            "example": "excerpt text"
          },
          "body": {
            "type": "string",
            "example": "description text"
          }
        }
      },
      "Release": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 117
          },
          "url": {
            "type": "string",
            "format": "url",
            "example": "https://example.com/"
          },
          "title": {
            "type": "string",
            "example": "title"
          },
          "platforms": {
            "$ref": "#/components/schemas/Platforms"
          },
          "images": {
            "$ref": "#/components/schemas/Images"
          },
          "excerpt": {
            "type": "string",
            "example": "excerpt text"
          },
          "body": {
            "type": "string",
            "example": "description text"
          }
        }
      },
      "Version": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "format": "url",
            "example": "https://example.com"
          },
          "version": {
            "type": "string",
            "example": "version name"
          },
          "timestamp": {
            "type": "integer",
            "example": 1573833735
          }
        }
      },
      "Platforms": {
        "type": "object",
        "properties": {
          "pc": {
            "type": "boolean",
            "example": true
          },
          "ps4": {
            "type": "boolean",
            "example": false
          },
          "xbox": {
            "type": "boolean",
            "example": false
          },
          "ms-store": {
            "type": "boolean",
            "example": false
          }
        },
        "xml": {
          "name": "Platforms"
        }
      },
      "Images": {
        "type": "object",
        "properties": {
          "image_large": {
            "type": "string",
            "example": "https://example.com/image_large.png"
          },
          "image_small": {
            "type": "string",
            "example": "https://example.com/image_small.png"
          }
        },
        "xml": {
          "name": "Images"
        }
      }
    }
  }
}